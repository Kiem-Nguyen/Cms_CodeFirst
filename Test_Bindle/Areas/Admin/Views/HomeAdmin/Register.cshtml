<!doctype html>
<html class="no-js" lang="">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Sufee Admin - HTML5 Admin Template</title>
    <meta name="description" content="Sufee Admin - HTML5 Admin Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="shortcut icon" href="~/Areas/Admin/images/Login.ico">

    <link rel="stylesheet" href="~/Areas/Admin/css/normalize.css">
    <link rel="stylesheet" href="~/Areas/Admin/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/css/themify-icons.css">
    <link rel="stylesheet" href="~/Areas/Admin/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/css/cs-skin-elastic.css">
    <!-- <link rel="stylesheet" href="~/Areas/Admin/css/bootstrap-select.less"> -->
    <link rel="stylesheet" href="~/Areas/Admin/scss/style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>

    <!-- <script type="text/javascript" src="https://cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.min.js"></script> -->

</head>
<body class="bg-dark">


    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-logo">
                    <h1 style="color:aliceblue">Register User</h1>
                </div>
                <div class="login-form">
                    <form method="post" action="@Url.Action("CheckRegister", "HomeAdmin")" onsubmit="return validateForm()">
                        <div class="form-group">
                            <label>User Name *</label>
                            <input type="text" name="UserName" class="form-control" placeholder="User Name">
                        </div>
                        <div class="form-group">
                            <label>Email address *</label>
                            <input type="email" name="Email" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label>Password *</label>
                            <input type="password" name="PassWord" class="form-control" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <label>RePassword *</label>
                            <input type="password" name="RePassWord" class="form-control" placeholder="RePassword">
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> Agree the terms and policy
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary btn-flat m-b-30 m-t-30">Register</button>
                        <div class="social-login-content">
                            <div class="social-button">
                                <button type="button" class="btn social facebook btn-flat btn-addon mb-3"><i class="ti-facebook"></i>Register with facebook</button>
                                <button type="button" class="btn social twitter btn-flat btn-addon mt-2"><i class="ti-twitter"></i>Register with twitter</button>
                            </div>
                        </div>
                        <div class="register-link m-t-15 text-center">
                            <p>Already have account ? <a href="@Url.Action("Login","HomeAdmin")"> Sign in</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Areas/Admin/js/vendor/jquery-2.1.4.min.js"></script>
    <script src="~/Areas/Admin/js/popper.min.js"></script>
    <script src="~/Areas/Admin/js/plugins.js"></script>
    <script src="~/Areas/Admin/js/main.js"></script>
</body>
</html>

<script type="text/javascript">
    function validateForm() {
        var a = $('input[name=UserName]').val();
        var b = $('input[name=Email]').val();
        var c = $('input[name=PassWord]').val();
        var d = $('input[name=RePassWord]').val()
        if (a == null || a === "", b == null || b === "", c == null || c === "", d == null || d === "") {
            alert("Please Fill All Required Field");
            return false;
        }
        if (c !== d) {
            alert("password and repassword is different");
            return false;
        }
    }
</script>

